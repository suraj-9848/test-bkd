# Environment Variables for Backend
# Copy this file to .env and fill in your actual values

# Database Configuration
MYSQL_DEV_DATABASE_URL=mysql://username:password@localhost:3306/lms_db
MYSQL_PROD_DATABASE_URL=mysql://username:password@prod-host:3306/lms_db
MONGO_KEY=mongodb://localhost:27017/lms_db

# Redis Configuration
REDIS_URL_DEV=redis://localhost:6379
REDIS_URL_PROD=redis://prod-redis-host:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=10d
JWT_COOKIE_EXPIRES_IN=864000000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# Server Configuration
NODE_ENV=development
PORT=8000
CORS_ORIGIN=http://localhost:3000,http://localhost:4000
PAYLOAD_LIMIT=10mb
LOG_LEVEL=info

# Axios Configuration
AXIOS_MAX_CONTENT_LENGTH=100000000
AXIOS_MAX_BODY_LENGTH=100000000

# Database Direct Connection (Alternative)
DB_HOST=localhost
DB_USERNAME=trialbliz
DB_PASSWORD=your-db-password
DB_NAME=lms_db 